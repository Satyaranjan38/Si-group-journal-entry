package com.SiGroup.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;


import org.springframework.http.HttpStatus;

import org.springframework.web.bind.annotation.*;
import org.springframework.web.multipart.MultipartFile;

import java.io.IOException;

import com.SiGroup.dto.FileUpload;
import com.SiGroup.service.DemoService;

@RestController
@RequestMapping("/api")
public class DemoController {

	
	 @Autowired
	    private DemoService documentService;
	 
	 @Autowired
	 private FileUpload fileUpload ; 

	@PostMapping("/upload1")
	public ResponseEntity<String> uploadFile(@RequestParam("file") MultipartFile file){
		
		try {
		
		System.out.println(file.getOriginalFilename());
		System.out.println(file.getContentType());
		if(file.isEmpty()) {
			return ResponseEntity.status(HttpStatus.NOT_FOUND).body("Request must contain file");
		}
		
		boolean f = fileUpload.uploadFile(file);
		
		if(f==true) {
			return ResponseEntity.ok("File upload sucess ");
		}}
		catch(Exception e) {
			return ResponseEntity.status(HttpStatus.INTERNAL_SERVER_ERROR).body("Something went wrong");
		}
		
		
		
		
		
	}

	   
}
